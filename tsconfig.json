{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "preact",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true
  },
  "include": [
    "src",
    "astro-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}